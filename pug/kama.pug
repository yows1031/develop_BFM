            td(colspan='9')
              p 時間：９：３０〜２２：００　電話92-4911
          tr.slide
            td.pic(colspan='9')
              i#yorkPrev.fas.fa-chevron-circle-left
              img#york_target
              i#yorkNext.fas.fa-chevron-circle-right
          tr.pointData
            td(colspan='9')
              .under
                nav
                  ul#york_thumbnails.subnav
                #yorkBack
                  i.fas.fa-caret-square-up
                  i.fas.fa-caret-square-left
    
